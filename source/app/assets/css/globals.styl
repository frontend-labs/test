html
  font-family "Source Sans Pro", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size $baseFontSize
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

body
  color #333
  background-color #fefefe
  min-height 100vh

*, *:before, *:after
  box-sizing border-box
  margin 0

.container
    max-width $containerWidth
    margin 0 auto
    padding-left 15px
    padding-right 15px
    .container
      padding-left 0
      padding-right 0

.app__title
  font-size 22px
  margin 20px 0

.app__subtitle
  font-size 18px
  margin 20px 0 10px

.job-item
    border-bottom 1px dashed #e1e1e1
    padding 15px 0
    position relative
    display block
    text-decoration none
    color inherit
    transition 0.3s all ease

    &:hover
      transition 0.3s all ease
      opacity .9

.job-item__title
    margin-top 0

.job-item__company-logo
  position absolute
  width 40px
  height 40px
  object-fit cover
  border-radius 50%
  overflow hidden
  left -55px
  top 0
  bottom 0
  margin auto
  img
    width 40px
    height 40px
.job-item__company,
.job-item__location,
.job-item__type
  font-size $baseFontSize

// Element UI custom styles

.el-radio__label, .el-input, .el-checkbox__label, .el-checkbox-button__inner, .el-button,
.el-form-item__label
  font-size $baseFontSize

.el-input
  input
    height 40px

.el-input--small
  font-size 14px
  input
    height 34px !important

.el-button
  transition 0.3s all ease
  &:hover
    color $brandColor
    transition 0.3s all ease

.el-button--primary
  background-color $brandColor
  border-color $brandColor
  &:hover
    background-color lighten($brandColor, 5)
    border-color lighten($brandColor, 5)
    color white

.el-checkbox__input
  &.is-checked
    .el-checkbox__inner
      background-color $brandColor
      border-color $brandColor

.el-pager
  li
    &:hover
      color $brandColor !important
    &.active
      background-color $brandColor !important
      border-color $brandColor !important
      &:hover
        color white !important
